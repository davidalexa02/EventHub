<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature_organiseevent.fragments.OrganiseEventFragment">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <!--                Post MVP-->

                <!--                <TextView-->
                <!--                    android:id="@+id/imageView9"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginEnd="24dp"-->
                <!--                    android:layout_marginBottom="20dp"-->
                <!--                    android:src="@drawable/ic_baseline_camera_alt_24"-->
                <!--                    android:text="Selecteaza"-->
                <!--                    android:layout_gravity="top|left"-->
                <!--                    android:padding="8dp"-->
                <!--                    android:background="@drawable/custom_select_background"-->
                <!--                    app:layout_constraintBottom_toBottomOf="@+id/view3"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent" />-->


                <include
                    android:id="@+id/include"
                    layout="@layout/toolbar_organiseevent" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/black_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coperta eveniment"
                    app:layout_constraintBottom_toBottomOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/eventNameInputLayout"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventNameEditText"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input"
                        android:drawableRight="@drawable/penpinapple"
                        android:drawablePadding="12dp"
                        android:hint="Nume eveniment"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/eventDateInputLayout"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/eventNameInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventDateEditText"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input"
                        android:drawableRight="@drawable/calendar"
                        android:drawablePadding="12dp"
                        android:hint="Data eveniment"
                        android:inputType="date"
                        android:padding="20dp"
                        android:text="28 Octombrie, 2022"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/eventHourInputLayout"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/eventDateInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventHourEditText"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input"
                        android:drawableRight="@drawable/clock"
                        android:drawablePadding="12dp"
                        android:hint="Ora eveniment"
                        android:inputType="time"
                        android:padding="20dp"
                        android:text="18:00"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/eventLocationInputLayout"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/eventHourInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventLocationEditText"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input"
                        android:drawablePadding="12dp"
                        android:hint="Locatie eveniment"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColorHint="#757575" />


                </com.google.android.material.textfield.TextInputLayout>


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="40dp"
                    android:src="@drawable/out"
                    app:layout_constraintBottom_toBottomOf="@+id/eventLocationInputLayout"
                    app:layout_constraintEnd_toEndOf="@+id/eventLocationInputLayout"
                    app:layout_constraintTop_toTopOf="@+id/eventLocationInputLayout" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/in"
                    app:layout_constraintEnd_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/eventDescriptionInputLayout"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/eventLocationInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventDescriptionEditText"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input"
                        android:drawablePadding="12dp"
                        android:gravity="top"
                        android:hint="Descriptie eveniment"
                        android:inputType="textMultiLine"
                        android:lines="7"
                        android:padding="20dp"
                        android:textColorHint="#757575" />


                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="19dp"
                    android:src="@drawable/out_doc"
                    app:layout_constraintEnd_toEndOf="@+id/eventDescriptionInputLayout"
                    app:layout_constraintTop_toTopOf="@+id/eventDescriptionInputLayout" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/in_doc"
                    app:layout_constraintEnd_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="@+id/imageView7" />

                <Button
                    android:id="@+id/buttontwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="22dp"
                    android:background="@drawable/general_button"
                    android:text="Continua"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/eventDescriptionInputLayout" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>